
#include <iostream>
#include <string>
using namespace std;

int main(){
    
    printf("give rows & cols value");
    int rows,cols;
    cin>>rows>>cols;
    
    for (int i=1;i<=rows;i++){
        for (int j=1;j<=cols;j++)
        {
            if (i==1){
                cout<<"*";
            }
            else if (i==rows){
                cout<<"*";
            }
            else if (j==1){
                cout<<"*";
            }
            else if (j>1 & j<cols ){
                cout<<" ";
            }else if (j==cols){
                cout<<"*";
            }
            
            
        }
    
        
        cout<<endl;
    }
    return 0;
}


---------------------------------------------------------------------------------------------------------------------------------------------------------

#include <iostream>
#include <string>
using namespace std;

int main(){
    
    printf("give rows & cols value :");
    int rows,cols;
    cin>>rows>>cols;
    
    for (int i=1;i<=rows;i++){
        for (int j=1;j<=i;j++)
        {
                cout<<"*";
            }
                cout<<endl;
    }
    return 0;
}
